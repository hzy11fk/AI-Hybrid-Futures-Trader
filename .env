# ==================================
# 币安 API 密钥
# ==================================

# 您的币安实盘 API Key 和 Secret Key
BINANCE_API_KEY=""
BINANCE_SECRET_KEY=""

# 您的币安测试网/模拟盘 API Key 和 Secret Key
BINANCE_TESTNET_API_KEY=""
BINANCE_TESTNET_SECRET_KEY=""


# ==================================
# Bark 推送服务
# ==================================

# 您的 Bark App 的推送 URL Key
# 示例: https://api.day.app/YourPersonalKey
BARK_URL_KEY="https://api.day.app/..."


# ------------------------------------------------
# AI 服务商选择 (填 "azure" 或 "openai")
# ------------------------------------------------
AI_PROVIDER="openai"  # <--- 在这里切换！例如，现在使用 OpenAI/DeepSeek

# ------------------------------------------------
# 标准 OpenAI / DeepSeek / 其他兼容API 的配置
# 如果 AI_PROVIDER 设置为 "openai", 以下配置会生效
# ------------------------------------------------
OPENAI_API_BASE="https://api.deepseek.com/v1"  # 如果用OpenAI官方, 填 "https://api.openai.com/v1"
OPENAI_API_KEY="sk-xxxxxxxxxxxxxxxxxxxxxxxx"     # 填你的 DeepSeek 或 OpenAI 密钥
OPENAI_MODEL_NAME="deepseek-chat"                # 填模型名称, 如 "gpt-4-turbo" 或 "deepseek-chat"

# ------------------------------------------------
# Azure OpenAI 服务配置
# 如果 AI_PROVIDER 设置为 "azure", 以下配置会生效
# ------------------------------------------------
AZURE_OPENAI_ENDPOINT="https://your-azure-resource.openai.azure.com/"
AZURE_OPENAI_KEY="your_azure_api_key"
AZURE_OPENAI_MODEL_NAME="your-deployment-name" # 注意: 这里是Azure上的“部署名称”
AZURE_API_VERSION="2024-02-01"                 # Azure API 版本
